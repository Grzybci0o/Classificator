<Window x:Class="Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Panel po lewej stronie -->
        <StackPanel Grid.Column="0" Margin="10">
            <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">File list</TextBlock>
            <ListBox Name="fileList" Height="300" />
            <Button Name="loadButton" Content="Load Files" Click="LoadButton_Click" Margin="0,10,0,0" />
        </StackPanel>

        <!-- Panel po prawej stronie -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock FontSize="16" FontWeight="Bold" Margin="0,0,0,10">Image</TextBlock>
            <Image Name="picture" Height="300" Source="images/brain.jpg"/>
            <StackPanel Margin="0,10,0,0">
                <Button Content="fault normal" Click="FaultNormalButton_Click" />
                <Button Content="fault wave" Click="FaultWaveButton_Click" />
                <Button Content="correct normal" Click="PerfectNormalButton_Click" />
                <Button Content="correct wave" Click="PerfectWaveButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
